{
  "name": "@mojaloop/forensic-logging-client",
  "version": "0.5.0",
  "description": "Client for connecting to forensic-logging-sidecar",
  "main": "src/index.js",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mojaloop/forensic-logging-client.git"
  },
  "keywords": [
    "forensic",
    "logging",
    "client"
  ],
  "scripts": {
    "pretest": "standard",
    "test": "npm run test:unit | faucet",
    "test:unit": "tape -- 'test/unit/**/*.test.js'",
    "test:xunit": "tape -- 'test/unit/**/*.test.js' | tap-xunit",
    "test:coverage": "istanbul cover tape -- 'test/unit/**/*.test.js'",
    "test:coverage-check": "npm run test:coverage && istanbul check-coverage"
  },
  "dependencies": {
    "@mojaloop/central-services-shared": "0.4.0",
    "bluebird": "3.5.1"
  },
  "devDependencies": {
    "faucet": "0.0.1",
    "istanbul": "0.4.5",
    "pre-commit": "1.2.2",
    "standard": "10.0.3",
    "sinon": "4.2.2",
    "tap-xunit": "2.2.0",
    "tape": "4.8.0",
    "tapes": "4.1.0"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  }
}
